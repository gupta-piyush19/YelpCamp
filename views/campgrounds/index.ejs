<% include ../partials/header %>
<div class = "container" style = "margin-top: 25px">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Here are some awesome hand-picked Campgrounds from all over the world</p>
            <a class = "btn btn-primary" href="/campground/new">Add New Campground</a>
        </div> 
    </header>

    <div class = "row text-center" style = "display : flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(place){ %>
        <div class = "col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class = "img-thumbnail imag" >
                <img class = "card-img-top" src= "<%= place.image %>" alt="<%= place.name %>">

                <div class = "caption"> 
                    <h5 class = "card-title text-center"><%= place.name %></h5>
                </div>
                <p>
                    <a href="/campground/<%= place._id %>" class = "btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>

    <a href="/">Back To Home</a>
</div>
<% include ../partials/footer %>

