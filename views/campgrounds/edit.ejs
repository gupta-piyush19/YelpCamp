<% include ../partials/header %>

<div class = "container">
    <h1 style= "text-align:center">Edit <%= campground.name%></h1>
    <div class = "row">    
        <div style="margin: 25px auto;">
            <form action="/campground/<%= campground._id %>/?_method=PUT" method = "post">
                <div class = "form-group">
                    <input type="text" value="<%= campground.name %>" name = "campground[name]">
                </div>
                <div class = "form-group">
                    <input type="number" value="<%- campground.price %>" name = "campground[price]" min = "0.01" step="0.01">
                </div>
                <div class = "form-group">
                    <input type="url" value="<%= campground.image %>" name = "campground[image]">
                </div>
                <div class = "form-group">
                    <input type="text" value="<%= campground.description %>" name = "campground[description]">    
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Save Changes</button> 
                </div>
            </form>
            <a href="/campground">View Campgrounds</a>
            <br>
            <a href="/">Home</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>