<% include ../partials/header %>

<div class = "container">
    <h1 style= "text-align:center">Add A New Campground!!</h1>
    <div class = "row">    
        <div style="margin: 25px auto;">
            <form action="/campground" method = "post">
                <div class = "form-group">
                    <input type="text" placeholder="Name" name = "name">
                </div>
                <div class = "form-group">
                    <input type="number" placeholder="price" name = "price" min = "0.01" step="0.01">
                </div>
                <div class = "form-group">
                    <input type="url" placeholder="image URL" name = "image">
                </div>
                <div class = "form-group">
                    <input type="text" placeholder="description" name = "description">    
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Add this</button> 
                </div>
            </form>
            <a href="/campground">View Campgrounds</a>
            <br>
            <a href="/">Home</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>