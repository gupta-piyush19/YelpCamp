<% include ../partials/header %>

<div class = "container">
    <h1 style= "text-align:center">Edit Comment</h1>
    <div class = "row">    
        <div style="margin: 25px auto;">
            <form action="/campground/<%= campground_id %>/comments/<%-comment._id%>?_method=PUT" method = "post">
                <div class = "form-group">
                    <input type="text" value="<%-comment.text%>" name = "comment[text]">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Update Comment</button> 
                </div>
            </form>
            <a href="/campground">View Campgrounds</a>
            <br>
            <a href="/">Home</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>