<% include ../partials/header %>

<div class = "container">
    <h1 style= "text-align:center">Add New Comment to <%- campground.name %></h1>
    <div class = "row">    
        <div style="margin: 25px auto;">
            <form action="/campground/<%= campground._id %>/comments" method = "post">
                <div class = "form-group">
                    <input type="text" placeholder="text" name = "comment[text]">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Comment</button> 
                </div>
            </form>
            <a href="/campground">View Campgrounds</a>
            <br>
            <a href="/">Home</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>